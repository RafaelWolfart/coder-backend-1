<h1 class="page-title">Productos en tiempo real</h1>

<section class="realtime-section">

  <h2 class="subtitle">Listado en tiempo real</h2>

  <div id="products-container" class="products-list">

  </div>

</section>

<hr />

<section class="form-section">
  <h2 class="subtitle">Agregar producto</h2>

  <form id="createForm" class="form-inline">
    <input type="text" name="team" placeholder="Equipo" required />
    <input type="text" name="player" placeholder="Jugador" required />
    <input type="number" name="price" placeholder="Precio" required />

    <button type="submit">Crear producto</button>
  </form>
</section>

<hr />

<section class="form-section">
  <h2 class="subtitle">Eliminar producto</h2>

  <form id="deleteForm" class="form-inline">
    <input
      type="number"
      name="productId"
      placeholder="ID del producto"
      required
    />
    <button type="submit" class="delete-btn">Eliminar</button>
  </form>
</section>

<script src="/socket.io/socket.io.js"></script>
<script src="/public/js/realTime.js"></script>