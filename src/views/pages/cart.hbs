<div class="cart-container">
  <h1 class="page-title">Mi Carrito</h1>

  <a href="/products" class="btn-continue-shopping">← Seguir comprando</a>

  {{#if cart.products}}
    <div class="cart-content">
      <!-- Tabla de productos -->
      <table class="cart-table">
        <thead>
          <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Subtotal</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each cart.products}}
            <tr class="cart-item">
              <td class="product-name">
                <strong>{{this.product.title}}</strong>
                <p class="product-category">{{this.product.category}}</p>
              </td>
              <td class="product-price">{{formatPrice this.product.price}}</td>
              <td class="product-quantity">
                <input
                  type="number"
                  min="1"
                  value="{{this.quantity}}"
                  class="quantity-input"
                  onchange="updateQuantity('{{../cart._id}}', '{{this.product._id}}', this.value)"
                />
              </td>
              <td class="product-subtotal">
                {{formatPrice (multiply this.product.price this.quantity)}}
              </td>
              <td class="product-actions">
                <button
                  class="btn-remove"
                  onclick="removeProduct('{{../cart._id}}', '{{this.product._id}}')"
                >
                  Eliminar
                </button>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>

      <!-- Resumen del carrito -->
      <div class="cart-summary">
        <h2>Resumen del Carrito</h2>
        <div class="summary-row">
          <span>Subtotal:</span>
          <span>{{formatPrice cart.subtotal}}</span>
        </div>
        <div class="summary-row">
          <span>IVA (21%):</span>
          <span>{{formatPrice cart.tax}}</span>
        </div>
        <div class="summary-row total">
          <span>Total:</span>
          <span>{{formatPrice cart.total}}</span>
        </div>

        <button class="btn-checkout">Proceder a la compra</button>
        <button class="btn-clear-cart" onclick="clearCart('{{cart._id}}')">
          Vaciar carrito
        </button>
      </div>
    </div>
  {{else}}
    <div class="empty-cart">
      <p>Tu carrito está vacío</p>
      <a href="/products" class="btn-shop">Ir al catálogo</a>
    </div>
  {{/if}}
</div>

<script>
  function updateQuantity(cartId, productId, newQuantity) {
    if (newQuantity <= 0) {
      alert("La cantidad debe ser mayor a 0");
      location.reload();
      return;
    }

    fetch(`/api/carts/${cartId}/products/${productId}`, {
      method: "PUT",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ quantity: parseInt(newQuantity) }),
    })
      .then((res) => res.json())
      .then((data) => {
        location.reload();
      })
      .catch((error) => {
        console.error("Error:", error);
        alert("Error al actualizar cantidad");
      });
  }

  function removeProduct(cartId, productId) {
    if (!confirm("¿Eliminar este producto del carrito?")) return;

    fetch(`/api/carts/${cartId}/products/${productId}`, {
      method: "DELETE",
    })
      .then((res) => res.json())
      .then((data) => {
        location.reload();
      })
      .catch((error) => {
        console.error("Error:", error);
        alert("Error al eliminar producto");
      });
  }

  function clearCart(cartId) {
    if (!confirm("¿Vaciar el carrito completamente?")) return;

    fetch(`/api/carts/${cartId}`, {
      method: "DELETE",
    })
      .then((res) => res.json())
      .then((data) => {
        location.reload();
      })
      .catch((error) => {
        console.error("Error:", error);
        alert("Error al vaciar carrito");
      });
  }
</script>
